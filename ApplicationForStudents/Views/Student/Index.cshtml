@model IEnumerable<ApplicationForStudents.Models.Student>

@{
    ViewBag.Title = "List of Students";
}

<div style="font-family:'Segoe UI'">

    <h2>List of Students</h2>

    <p>
        @Html.ActionLink("Create New Student Record", "Create")
    </p>
    <table class="table table-bordered">
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Id)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.DOB)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.DOJ)
            </th>
            <th>Actions</th>
        </tr>

        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Id)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Name)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.DOB)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.DOJ)
                </td>
                    <td>
                        @Html.ActionLink("Edit Student", "Edit", new { id = item.Id }) |
                        @Html.ActionLink("Details of Student", "Details", new { id = item.Id }) |
                        @Html.ActionLink("Delete Student", "Delete", new { id = item.Id })
                    </td>
                </tr>
            }

        </table>
    </div>
